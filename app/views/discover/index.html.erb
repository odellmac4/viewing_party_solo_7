<center>
    <h1>Viewing Party</h1>
    <h6>Discover Movies</h6>
    <%=button_to "Find Top Rated Movies", user_movies_path(@user, q: "top%20rated"), method: :get %>
    <br>
    <%= form_with url: user_movies_path(@user, q: "keyword"), method: :get, local: true do |form| %>
        <%= form.label :search%>
        <%= form.text_field :search %>
        <%= form.submit 'Find Movies' %>
    <% end %>
</center>